    "styles": {

        "base": {
            "color": "#ABB2BF"
        },

        "h1": {
            "font": { "style": "bold" },
            "color": "#E06C75"
        },

        "h2": {
            "font": { "style": "bold" },
            "color": "#E06C75"
        },

        "h3": {
            "font": { "style": "bold" },
            "color": "#E06C75"
        },

        "h4": {
            "font": { "style": "bold" },
            "color": "#E06C75"
        },

        "h5": {
            "font": { "style": "bold" },
            "color": "#E06C75"
        },

        "h6": {
            "font": { "style": "bold" },
            "color": "#E06C75"
        },

